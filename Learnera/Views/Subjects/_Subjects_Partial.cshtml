@model IEnumerable<Learnera.Models.Subject>
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professor)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.CheckBox("Add subject", false)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name, new { @class = "form-control" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Professor, new { @class = "form-control" })
            </td>
        </tr>
        }
    </tbody>
