@model IEnumerable<Learnera.Models.Slide>
@{
    ViewBag.Title = "Show";
}
<h2>Slides</h2>

@{ 
    int shownSlideIndex = 0;
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div id="full" class="col-10 mt-3" style="height: 75vh;">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <script>InitializeTotalSlides('@Model.ToList().Count')</script> 
                    @foreach (var slide in Model) {
                        if (slide.ImageUrl.EndsWith("1.jpg")) {
                            shownSlideIndex = slide.Id;
                            <div class="carousel-item d-flex justify-content-center active" >
                                <img class="d-block" src="@slide.ImageUrl" alt="First slide" style="height:100vh">
                            </div>
                        }
                        else {
                            <div class="carousel-item d-flex justify-content-center">
                                <img class="d-block" src="@slide.ImageUrl" alt="First slide" style="height:100vh">
                            </div>
                        }
                    }
                </div>
                <a id="leftSlide" class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a id="rightSlide" class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <button class="btn btn-light" onclick="openFullscreen()">Full screen</button>

    <div class="row mt-5 justify-content-center">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row justify-content-between">
                        <div class="col-4">
                            Questions & Answers
                        </div>
                        <div class="col-3 ml-auto text-muted">
                            Last Activity: 20.06.2019
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group">

                        <ul style="list-style-type: none ">

                            <li>
                                <div class="p-3">
                                    <h4 class="text-info">Nikola Pejovski</h4>
                                    <h4 class="text-dark ">Ask me a question?</h4>

                                </div>

                                <ul style="list-style-type: none ">


                                    <li class="h5 mt-4 text-info bg-light rounded p-3 border"
                                        style="border-color: ghostwhite">
                                        Petar Penkov
                                        <div class="h5 text-dark ml-1 ">
                                            How to pass FINKI?
                                        </div>
                                    </li>
                                    <li class="h5 mt-4 text-info bg-light rounded p-3 border"
                                        style="border-color: ghostwhite">
                                        Petar Penkov
                                        <div class="h5 text-dark ml-1 ">
                                            How to pass FINKI?
                                        </div>
                                    </li>
                                    <li class="h5 mt-4 text-info bg-light rounded p-3 border"
                                        style="border-color: ghostwhite">
                                        Petar Penkov
                                        <div class="h5 text-dark ml-1 ">
                                            How to pass FINKI?
                                        </div>
                                    </li>
                                </ul>
                            </li>
                            <hr>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section scripts{
    <script>

        /* Load slide comments */
        var shownSlideIndex = 0;
        var totalSlides;

        function InitializeTotalSlides(var num) {
            totalSlides = num;
        }

        $("#leftSlide").click(function () {
            shownSlideIndex -= 1;
            if (shownSlideIndex < 0)
                shownSlideIndex = totalSlides - 1;
            // Ajax here
        });
        $("#rightSlide").click(function () {
            shownSlideIndex += 1;
            if (shownSlideIndex > totalSlides - 1)
                shownSlideIndex = 0;
            // Ajax here
        });


        /* Get the documentElement (<html>) to display the page in fullscreen */
        var elem = document.getElementById("full");

        /* View in fullscreen */
        function openFullscreen() {
            if (elem.requestFullscreen) {
            elem.requestFullscreen();
            } else if (elem.mozRequestFullScreen) { /* Firefox */
            elem.mozRequestFullScreen();
            } else if (elem.webkitRequestFullscreen) { /* Chrome, Safari and Opera */
            elem.webkitRequestFullscreen();
            } else if (elem.msRequestFullscreen) { /* IE/Edge */
            elem.msRequestFullscreen();
            }

        }

        /* Close fullscreen */
        function closeFullscreen() {
            if (document.exitFullscreen) {
            document.exitFullscreen();
            } else if (document.mozCancelFullScreen) { /* Firefox */
            document.mozCancelFullScreen();
            } else if (document.webkitExitFullscreen) { /* Chrome, Safari and Opera */
            document.webkitExitFullscreen();
            } else if (document.msExitFullscreen) { /* IE/Edge */
            document.msExitFullscreen();
            }
        }
    </script>
    
    }
